<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" asp-href-include="lib/bootstrap/dist/css/*.css" />
    <link rel="stylesheet" asp-href-include="styles/TestStyle.css" />
    <title>@ViewBag.Title</title>
</head>
<body class="panel panel-default">
    <div class="panel-heading">
        <h4>
            @ViewBag.Title
            <a class="btn btn-sm btn-primary pull-right"
               asp-action="List" asp-controller="User">User</a>
            <a class="btn btn-sm btn-primary pull-right"
                asp-action="List" asp-controller="Track">Track</a>
        </h4>
    </div>
    <div class="panel-body">
        @RenderBody()
    </div>
</body>
</html>
